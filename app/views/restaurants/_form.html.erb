<%= form_for @restaurant, :html => {:class => "valform"} do |f|  %>
  <% if @restaurant.errors.any? %>
    <h2>Errors:</h2>
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<p>
        <%= f.label :name %><br />
        <%= f.text_field :name %><br />
<br />
        <%= f.label :description %><br />
        <%= f.text_area :description %>
<br />
		<%= f.label :address %><br />
		<%= f.text_field :address %><br />
<br />
		<%= f.label :phone %><br />
		<%= f.text_area :phonenumber %>
</p>

<p>
        <%= f.submit "Add" %>
</p>
<% end %>
